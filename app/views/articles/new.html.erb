  <h1>Add a new article</h1>
    <%= simple_form_for(@article) do |f| %>
      <% if params[:commit] == "Link Preview"%>
        <p>Title: <%= @article.title%> </p>
        <p>Body: <%= @article.body%> </p>
      <% end %>
      <%= f.input :link %>
      <%= f.input :title %>
      <%= f.input :body %>
      <%= f.submit "Link Preview" %>
      <%= f.submit %>
    <% end %>
  <%= link_to articles_path do %>
    <p>Home</p>
  <% end %>