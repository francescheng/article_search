<p>Title:<%= @page.best_title %></p>
<p>H3: <%=@page.h3 %></p>
    <%= simple_form_for @article do |f| %>
      <% if params[:commit] == "Link Preview"%>
        <p>Title: <%= @article.title%> </p>
        <p>Body: <%= @article.body%> </p>
        <p>Page: <%= @page.title%> </p>
      <% end %>

      <%= f.input :link, input_html: {value: @page.url }%>
      <%= f.input :title, input_html: {value: @page.best_title }%>
      <%= f.input :body, input_html: {value: @body} %> 
      <%= f.submit "Link Preview" %>
      <%= f.submit %>
    <% end %>
