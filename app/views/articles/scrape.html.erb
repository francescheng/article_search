<h2>Here is a preview of your article:</h2>
<%= simple_form_for @article do |f| %>

    <%= f.input :link, input_html: {value: @page.url }%>
    <%= f.input :title, input_html: {value: @page.best_title }%>
    <%= f.input :body, input_html: {value: @body}, as: :text %> 
    <%= f.submit %>
<% end %>
